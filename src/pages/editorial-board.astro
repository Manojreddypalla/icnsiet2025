<Layout>
  <Header />

  <main class="min-h-screen bg-gradient-to-br from-purple-50 via-lavender-50 to-purple-100">
    <!-- Hero Section -->
    <section class="relative py-20 px-4">
      <div class="container mx-auto text-center">
        <div class="mb-8">
          <h1 class="text-5xl md:text-6xl font-bold text-purple-800 mb-4 tracking-tight">
            Editorial Board
          </h1>
          <div class="w-24 h-1 bg-gradient-to-r from-purple-400 to-purple-600 mx-auto rounded-full"></div>
        </div>
        <p class="text-xl text-gray-800 max-w-2xl mx-auto leading-relaxed">
          Meet our distinguished panel of experts who guide our academic excellence and research innovation.
        </p>
      </div>
      
      <!-- Floating Background Elements -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-20 left-10 w-32 h-32 bg-purple-200 rounded-full opacity-20 animate-pulse"></div>
        <div class="absolute top-40 right-20 w-20 h-20 bg-purple-300 rounded-full opacity-30 animate-bounce"></div>
        <div class="absolute bottom-20 left-1/4 w-16 h-16 bg-purple-400 rounded-full opacity-25 animate-pulse"></div>
      </div>
    </section>

    <!-- Editorial Board Cards -->
    <section class="pb-20 px-4">
      <div class="container mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
          {
            editorialBoard.map((member, index) => (
              <div
                id={`member-${member.id}`}
                class={`group relative bg-white/70 backdrop-blur-md rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 ${
                  index % 2 === 0 ? 'lg:translate-y-4' : 'lg:-translate-y-4'
                }`}
                style={{
                  animationDelay: `${index * 0.1}s`,
                  animation: 'fadeInUp 0.6s ease-out forwards'
                }}
              >
                <!-- Floating Card Effect -->
                <div class="absolute inset-0 bg-gradient-to-br from-white/20 to-white/10 rounded-2xl transform rotate-1 group-hover:rotate-0 transition-transform duration-300"></div>
                
                <div class="relative p-6">
                  <!-- Profile Image -->
                  <div class="relative mb-6 mx-auto w-32 h-32">
                    <img
                      src={member.image}
                      alt={member.name}
                      class="w-full h-full object-cover rounded-full bg-purple-100"
                      loading="lazy"
                      onerror="this.src='data:image/svg+xml;base64,'"
                    />
                  </div>

                  <!-- Member Info -->
                  <div class="text-center mb-4">
                    <h3 class="text-xl font-bold text-gray-800 mb-2 group-hover:text-gray-900 transition-colors">
                      {member.name}
                    </h3>
                    <p class="text-gray-700 font-medium mb-2">{member.role}</p>
                    <p class="text-sm text-gray-600 leading-relaxed mb-4">
                      {member.institution}
                    </p>
