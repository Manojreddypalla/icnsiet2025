<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    background-color: #ffffff;
    color: #333;
    min-height: 100vh;
    overflow-x: hidden;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* Hero Section */
  .hero-section {
    min-height: 50vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    position: relative;
    background: linear-gradient(135deg, #6e3b9e 0%, #8a2be2 100%);
    color: white;
    overflow: hidden;
  }

  .hero-content {
    position: relative;
    z-index: 1;
  }

  .hero-title {
    font-size: 4rem;
    font-weight: 800;
    color: white;
    margin-bottom: 1rem;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
  }

  .hero-subtitle {
    font-size: 1.3rem;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 2rem;
    font-weight: 300;
  }

  .hero-decoration {
    width: 100px;
    height: 4px;
    background: rgba(255, 255, 255, 0.8);
    margin: 0 auto;
    border-radius: 2px;
  }

  /* Section Styles */
  section {
    padding: 80px 0;
    position: relative;
    background-color: white;
  }

  .section-title {
    text-align: center;
    font-size: 2.5rem;
    font-weight: 700;
    color: #6e3b9e;
    margin-bottom: 60px;
    position: relative;
  }

  .section-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 3px;
    background: linear-gradient(90deg, #6e3b9e, #8a2be2);
    border-radius: 2px;
  }

  /* Chief Patrons Section */
  .chief-patrons-section {
    background-color: #f9f6ff;
  }

  .chief-patrons-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 40px;
    margin-top: 60px;
  }

  .chief-patron-card {
    background: white;
    border-radius: 20px;
    padding: 40px;
    text-align: center;
    position: relative;
    box-shadow: 0 10px 30px rgba(110, 59, 158, 0.1);
    transition: all 0.3s ease;
    transform: translateY(0);
    border: 1px solid rgba(110, 59, 158, 0.1);
  }

  .chief-patron-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 40px rgba(110, 59, 158, 0.2);
  }

  .card-glow {
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(45deg, #8a2be2, #6e3b9e, #8a2be2);
    border-radius: 22px;
    z-index: -1;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .chief-patron-card:hover .card-glow {
    opacity: 0.3;
  }

  .patron-image {
    width: 120px;
    height: 120px;
    margin: 0 auto 20px;
    border-radius: 50%;
    overflow: hidden;
    border: 4px solid #f0e6ff;
    box-shadow: 0 5px 15px rgba(110, 59, 158, 0.1);
  }

  .patron-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .patron-info h3 {
    font-size: 1.5rem;
    font-weight: 600;
    color: #333;
    margin-bottom: 8px;
  }

  .patron-info .position {
    font-size: 1.1rem;
    color: #666;
    font-weight: 400;
  }

  /* Patrons Section */
  .patrons-section {
    background-color: white;
  }

  .patrons-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 30px;
  }

  .patron-card {
    background: white;
    border-radius: 15px;
    padding: 25px;
    text-align: center;
    box-shadow: 0 5px 20px rgba(110, 59, 158, 0.05);
    transition: all 0.3s ease;
    transform: translateY(0);
    border: 1px solid rgba(110, 59, 158, 0.05);
  }

  .patron-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(110, 59, 158, 0.1);
  }

  .patron-image-small {
    width: 80px;
    height: 80px;
    margin: 0 auto 15px;
    border-radius: 50%;
    overflow: hidden;
    border: 3px solid #f0e6ff;
  }

  .patron-image-small img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .patron-info-small h4 {
    font-size: 1.1rem;
    font-weight: 600;
    color: #333;
    margin-bottom: 5px;
  }

  .patron-info-small p {
    font-size: 0.9rem;
    color: #666;
  }

  /* General Chairs, Program Chairs, TPC, Advisory Sections */
  .general-chairs-section,
  .program-chairs-section,
  .tpc-section,
  .advisory-section {
    background-color: #f9f6ff;
  }

  .chairs-grid,
  .program-chairs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
  }

  .tpc-grid,
  .advisory-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 25px;
  }

  .chair-card,
  .program-chair-card,
  .tpc-card,
  .advisory-card {
    background: white;
    border-radius: 15px;
    padding: 25px;
    text-align: center;
    box-shadow: 0 5px 20px rgba(110, 59, 158, 0.05);
    transition: all 0.3s ease;
    transform: translateY(0);
    border: 1px solid rgba(110, 59, 158, 0.05);
    animation: fadeInUp 0.6s ease forwards;
    opacity: 0;
  }

  .chair-card:hover,
  .program-chair-card:hover,
  .tpc-card:hover,
  .advisory-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 40px rgba(110, 59, 158, 0.1);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .chair-card:nth-child(1) { animation-delay: 0.1s; }
  .chair-card:nth-child(2) { animation-delay: 0.2s; }
  .chair-card:nth-child(3) { animation-delay: 0.3s; }

  .chair-image,
  .tpc-image,
  .advisory-image {
    width: 100px;
    height: 100px;
    margin: 0 auto 20px;
    border-radius: 50%;
    overflow: hidden;
    border: 3px solid #f0e6ff;
    box-shadow: 0 5px 15px rgba(110, 59, 158, 0.1);
  }

  .chair-image img,
  .tpc-image img,
  .advisory-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .chair-info h3,
  .tpc-info h4,
  .advisory-info h4 {
    font-size: 1.2rem;
    font-weight: 600;
    color: #333;
    margin-bottom: 8px;
  }

  .chair-info .position,
  .chair-info .institution,
  .tpc-info p,
  .advisory-info p {
    color: #666;
    font-size: 0.95rem;
    margin-bottom: 4px;
  }

  .chair-info .institution,
  .advisory-info .institution {
    font-size: 0.9rem;
    color: #888;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero-title {
      font-size: 3rem;
    }

    .section-title {
      font-size: 2rem;
    }

    .chief-patron-card,
    .patron-card,
    .chair-card,
    .program-chair-card,
    .tpc-card,
    .advisory-card {
      padding: 20px;
    }

    .patron-image {
      width: 100px;
      height: 100px;
    }

    .patron-image-small {
      width: 70px;
      height: 70px;
    }

    .chair-image,
    .tpc-image,
    .advisory-image {
      width: 80px;
      height: 80px;
    }
  }

  @media (max-width: 480px) {
    .container {
      padding: 0 15px;
    }

    .hero-title {
      font-size: 2.2rem;
    }

    .hero-subtitle {
      font-size: 1.1rem;
    }

    .section-title {
      font-size: 1.8rem;
      margin-bottom: 40px;
    }

    .chief-patrons-grid,
    .patrons-grid,
    .tpc-grid,
    .advisory-grid {
      gap: 20px;
    }

    section {
      padding: 60px 0;
    }
